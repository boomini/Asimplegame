<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InGameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/lemon"
        android:orientation="vertical">

        <Button
            android:id="@+id/easybtn"
            android:layout_width="152dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:background="@drawable/btnshape"
            android:text="Easy Mode"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/hardbtn"
            android:layout_width="152dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/btnshape"
            android:text="Hard mode"
            android:textStyle="bold"></Button>


        <Button
            android:id="@+id/ttssttbtn"
            android:layout_width="152dp"
            android:layout_height="66dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/btnshape"
            android:text="Speach Game"
            android:textStyle="bold" />

        <Button
            android:id="@+id/mainback5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/btnshape2"
            android:text="Back"
            android:textStyle="bold"/>


    </LinearLayout>
</LinearLayout>