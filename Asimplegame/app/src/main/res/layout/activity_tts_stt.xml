<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lemon"
    tools:context=".TtsStt">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/score1"
            android:layout_width="152dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginTop="130dp"
            android:background="@drawable/btnshape"
            android:text="Score = 1"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/ttsbtn"
            android:layout_width="152dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/btnshape"
            android:text="Listening to problems"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/Sttbtn"
            android:layout_width="152dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/btnshape"
            android:text="ANSWER"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/btnshape"
            android:text="ReStart"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/mainback4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/btnshape2"
            android:text="Back"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtQuestion1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2*2*2 ="
            android:visibility="invisible"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/Stttext"
            android:layout_width="79dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/btnshape"
            android:hint="음성 출력"
            android:textStyle="bold"
            android:visibility="invisible"
            tools:visibility="gone" />

    </LinearLayout>


</RelativeLayout>